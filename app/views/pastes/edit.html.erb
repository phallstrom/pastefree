<h1>Editing paste</h1>

<% form_for(@paste) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.label :theme %><br />
    <%= f.text_field :theme %>
  </p>
  <p>
    <%= f.label :syntax %><br />
    <%= f.text_field :syntax %>
  </p>
  <p>
    <%= f.label :file_path %><br />
    <%= f.text_field :file_path %>
  </p>
  <p>
    <%= f.label :is_private %><br />
    <%= f.check_box :is_private %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @paste %> |
<%= link_to 'Back', pastes_path %>
