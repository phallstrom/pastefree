<h1>New paste</h1>

<% form_for(@paste, :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.label :theme %><br />
    <%= f.select :theme, Theme.options_for_select, :include_blank => :true %>
  </p>
  <p>
    <%= f.label :syntax %><br />
    <%= f.select :syntax, Syntax.options_for_select, :include_blank => :true  %>
  </p>
  <p>
    <%= f.label :file_path %><br />
    <%= f.file_field :file_path %>
  </p>
  <p>
    <%= f.label :is_private %><br />
    <%= f.check_box :is_private %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', pastes_path %>
