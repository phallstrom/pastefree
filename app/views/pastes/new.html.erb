<h1>New paste</h1>

<% form_for(@paste, :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.label :theme_id %><br />
    <%= f.select :theme_id, Theme.options_for_select, :include_blank => :true %>
  </p>
  <p>
    <%= f.label :syntax_id %><br />
    <%= f.select :syntax_id, Syntax.options_for_select, :include_blank => :true  %>
  </p>
  <p>
    <%= f.label :file_path %><br />
    <%= f.file_field :file_path %>
  </p>
  <p>
    <%= f.label :is_private %><br />
    <%= f.check_box :is_private %>
  </p>

  <% if @user.nil? %>
    <p>
      <%= f.label :email, 'Your Email Address' %><br />
      <%= text_field_tag :email, params[:email] %>
      <br />(to prove your human)
    </p>
  <% else %>
    <%= hidden_field_tag :token, @user.token %>
  <% end %>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', pastes_path %>
